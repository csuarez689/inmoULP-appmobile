<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.inmueble.AgregarInmuebleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Dirección -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDireccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tipo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Tipo"
                android:layout_marginTop="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:layout_constraintTop_toBottomOf="@id/tilDireccion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/actvTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Uso -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Uso"
                android:layout_marginTop="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:layout_constraintTop_toBottomOf="@id/tilTipo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/actvUso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ambientes y Superficie -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAmbientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ambientes"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tilUso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tilSuperficie">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAmbientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSuperficie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Superficie (m²)"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tilAmbientes"
                app:layout_constraintStart_toEndOf="@id/tilAmbientes"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSuperficie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Precio -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPrecio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilAmbientes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Latitud y Longitud -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLatitud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Latitud"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tilPrecio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tilLongitud">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLatitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal|numberSigned" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilLongitud"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Longitud"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tilLatitud"
                app:layout_constraintStart_toEndOf="@id/tilLatitud"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal|numberSigned" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Disponible -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchDisponible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:checked="false"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilLatitud"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Imagen -->
            <ImageView
                android:id="@+id/ivImagenPreview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Vista previa de imagen"
                app:layout_constraintTop_toBottomOf="@id/switchDisponible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Galería"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/ivImagenPreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnTomarFoto" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomarFoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cámara"
                android:layout_marginTop="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/ivImagenPreview"
                app:layout_constraintStart_toEndOf="@id/btnSeleccionarImagen"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botón Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Guardar Inmueble"
                android:layout_marginTop="24dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnTomarFoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>