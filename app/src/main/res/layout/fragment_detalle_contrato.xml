<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.contrato.DetalleContratoFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Contrato"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Inquilino -->
            <TextView
                android:id="@+id/tvLabelInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inquilino"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvTituloContrato"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Inmueble -->
            <TextView
                android:id="@+id/tvLabelInmueble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inmueble"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvInmueble"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelInmueble"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Fecha Inicio -->
            <TextView
                android:id="@+id/tvLabelFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Inicio"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvInmueble"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelFechaInicio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Fecha Finalización -->
            <TextView
                android:id="@+id/tvLabelFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Finalización"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvFechaInicio"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvFechaFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelFechaFin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Monto Alquiler -->
            <TextView
                android:id="@+id/tvLabelMontoAlquiler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto Alquiler"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvFechaFin"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMontoAlquiler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelMontoAlquiler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Separador -->
            <View
                android:id="@+id/separador"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvMontoAlquiler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Título Pagos -->
            <TextView
                android:id="@+id/tvTituloPagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagos Realizados"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/separador"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- RecyclerView de Pagos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPagos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tvTituloPagos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_pago" />

            <!-- Mensaje lista vacía -->
            <TextView
                android:id="@+id/tvSinPagos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay pagos registrados"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvTituloPagos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>