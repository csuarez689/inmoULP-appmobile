<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.inmueble.DetalleInmuebleFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Imagen del inmueble -->
            <ImageView
                android:id="@+id/ivInmuebleDetalle"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del inmueble"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_launcher_background"/>

            <!-- Dirección -->
            <TextView
                android:id="@+id/tvLabelDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ivInmuebleDetalle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvDireccionDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDireccion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Tipo -->
            <TextView
                android:id="@+id/tvLabelTipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvDireccionDetalle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvLabelUso"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/tvTipoDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelTipo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvUsoDetalle"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- Uso -->
            <TextView
                android:id="@+id/tvLabelUso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Uso"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tvLabelTipo"
                app:layout_constraintStart_toEndOf="@id/tvLabelTipo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/tvUsoDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tvTipoDetalle"
                app:layout_constraintStart_toEndOf="@id/tvTipoDetalle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- Ambientes -->
            <TextView
                android:id="@+id/tvLabelAmbientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ambientes"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTipoDetalle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvLabelSuperficie"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/tvAmbientesDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelAmbientes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvSuperficieDetalle"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- Superficie -->
            <TextView
                android:id="@+id/tvLabelSuperficie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Superficie"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tvLabelAmbientes"
                app:layout_constraintStart_toEndOf="@id/tvLabelAmbientes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <TextView
                android:id="@+id/tvSuperficieDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/tvAmbientesDetalle"
                app:layout_constraintStart_toEndOf="@id/tvAmbientesDetalle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"/>

            <!-- Precio -->
            <TextView
                android:id="@+id/tvLabelPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvAmbientesDetalle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvPrecioDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelPrecio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Switch Disponible -->
            <TextView
                android:id="@+id/tvLabelDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvPrecioDetalle"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tvLabelDisponible"
                app:layout_constraintBottom_toBottomOf="@id/tvLabelDisponible"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>