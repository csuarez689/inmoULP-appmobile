<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.contrato.DetalleInquilinoFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Inquilino"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvLabelNombreInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvTituloInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvNombreInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelNombreInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Apellido -->
            <TextView
                android:id="@+id/tvLabelApellidoInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvNombreInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvApellidoInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelApellidoInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- DNI -->
            <TextView
                android:id="@+id/tvLabelDniInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvApellidoInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvDniInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelDniInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- E-mail -->
            <TextView
                android:id="@+id/tvLabelEmailInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvDniInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvEmailInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEmailInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Teléfono -->
            <TextView
                android:id="@+id/tvLabelTelefonoInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvEmailInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTelefonoInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelTelefonoInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Garante -->
            <TextView
                android:id="@+id/tvLabelGaranteInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garante"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvTelefonoInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvGaranteInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelGaranteInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Teléfono Garante -->
            <TextView
                android:id="@+id/tvLabelTelefonoGaranteInquilino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono Garante"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvGaranteInquilino"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTelefonoGaranteInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabelTelefonoGaranteInquilino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>