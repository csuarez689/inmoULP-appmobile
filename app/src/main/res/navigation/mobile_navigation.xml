<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.home.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.perfil.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_nav_perfil_to_CambiarPasswordFragment"
            app:destination="@id/CambiarPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/CambiarPasswordFragment"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.perfil.CambiarPasswordFragment"
        android:label="Cambiar contraseÃ±a"
        tools:layout="@layout/fragment_cambiar_password" />

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.inmueble.InmueblesFragment"
        android:label="Mis Inmuebles"
        tools:layout="@layout/fragment_inmuebles" >
        <action
            android:id="@+id/action_nav_inmuebles_to_detalleInmuebleFragment"
            app:destination="@id/detalleInmuebleFragment" />
        <action
            android:id="@+id/action_nav_inmuebles_to_agregarInmuebleFragment"
            app:destination="@id/agregarInmuebleFragment" />
    </fragment>

    <fragment
        android:id="@+id/detalleInmuebleFragment"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.inmueble.DetalleInmuebleFragment"
        android:label="Detalle del Inmueble"
        tools:layout="@layout/fragment_detalle_inmueble" >
        <action
            android:id="@+id/action_detalleInmuebleFragment_to_nav_inmuebles2"
            app:destination="@id/nav_inmuebles" />
    </fragment>

    <fragment
        android:id="@+id/agregarInmuebleFragment"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.inmueble.AgregarInmuebleFragment"
        android:label="Agregar Inmueble"
        tools:layout="@layout/fragment_agregar_inmueble" >
        <action
            android:id="@+id/action_agregarInmuebleFragment_to_nav_inmuebles2"
            app:destination="@id/nav_inmuebles" />
    </fragment>

    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.contrato.ContratosFragment"
        android:label="Contratos"
        tools:layout="@layout/fragment_contratos" >
        <action
            android:id="@+id/action_nav_contratos_to_detalleInquilinoFragment"
            app:destination="@id/detalleInquilinoFragment" />
        <action
            android:id="@+id/action_nav_contratos_to_detalleContratoFragment"
            app:destination="@id/detalleContratoFragment" />
    </fragment>

    <fragment
        android:id="@+id/detalleInquilinoFragment"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.contrato.DetalleInquilinoFragment"
        android:label="Inquilino"
        tools:layout="@layout/fragment_detalle_inquilino" >
        <action
            android:id="@+id/action_detalleInquilinoFragment_to_nav_contratos"
            app:destination="@id/nav_contratos" />
    </fragment>

    <fragment
        android:id="@+id/detalleContratoFragment"
        android:name="com.csuarez.ulpinmobiliaria.ui.menu.contrato.DetalleContratoFragment"
        android:label="Contrato"
        tools:layout="@layout/fragment_detalle_contrato" >
        <action
            android:id="@+id/action_detalleContratoFragment_to_nav_contratos"
            app:destination="@id/nav_contratos" />
    </fragment>



</navigation>